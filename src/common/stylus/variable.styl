$color-sub-theme = #d93f30;
$color-text = #000;
$color-text-h = #fff;
$color-text-d = rgba(0, 0, 0, 0.4);
$color-text-l = rgba(0, 0, 0, 0.5);
$color-text-ll = rgba(0, 0, 0, 0.8);
$color-green = #31c27c;
$color-yellow = #f1f13d;
$color-pink = #fa7fbd;
$color-blue = #50baf8;
$color-red = #f96666;

.mu-dialog-title {
  color: $color-theme;
}

.mu-item {
  min-height: 44px;
  padding: 0px;
}

.mu-item-right {
  right: 0px;
}

.mu-item.show-right {
  padding-right: 40px;
}

.mu-item.show-left {
  padding-left: 48px;
}

.mu-bottom-item-text {
  font-size: 16px;
  color: #fff;
  padding-bottom: 5px;
}

.mu-bottom-item-active .mu-bottom-item-text {
  font-size: 16px;
  color: #fff;
}

.mu-bottom-nav {
  background-color: $color-theme;
  height: 44px;
  line-height: 30px;
}
